<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background"
    android:orientation="vertical"
    android:padding="15dp" >

    <EditText
        android:id="@+id/popupWindowEditText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入旧密码"
        android:password="true"
        android:singleLine="true"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/popupWindowEditText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入新的密码"
        android:password="true"
        android:singleLine="true"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/popupWindowEditText3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请再次输入新的密码"
        android:password="true"
        android:singleLine="true"
        android:textSize="10pt" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/popupWindowButton2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/popupWindowButton1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
  <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
</LinearLayout>