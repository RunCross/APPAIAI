<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp" >

    <EditText
        android:id="@+id/pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login"
        android:layout_below="@+id/name"
        android:layout_marginTop="28dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pwd"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="33dp"
        android:hint="用户名"
        android:singleLine="true"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/loginimg" />

    <Button
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:text="注册"
        android:textColor="#000000" />

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/reg"
        android:layout_centerHorizontal="true"
        android:background="#ff0000"
        android:text="登陆"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autologin"
        android:layout_alignBottom="@+id/autologin"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:text="记住密码"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pwd"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="21dp"
        android:checked="true"
        android:text="自动登录"
        android:textColor="#000000" />

</RelativeLayout>